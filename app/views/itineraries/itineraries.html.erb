<table class="table table-light">
  <thead>
    <tr>
      <th class="table-dark bg-primary">Itineraries</th>
      <th class="table-dark bg-primary" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <% if @itineraries.blank? %>
        <p class="text-center">Create a new itinerary!</p>
      <% else %>
        <% @itineraries.each do |itinerary| %>
          <%= render 'itineraries/itinerary', itinerary: itinerary %>
          <br>
        <% end %>
      <% end %>
    </div>
  </div>
</table>
