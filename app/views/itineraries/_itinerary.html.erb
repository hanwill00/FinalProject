<div class="card">
  <div class="card-body">
    <span class="card-title">
      <strong><%= link_to itinerary.name, itinerary %></strong>
    </span>
    <br>
    <% itinerary.events.each do |event| %>
      <%= event.name %>
      <%= link_to 'Edit', edit_itinerary_event_path(itinerary, event) %> |
      <%= link_to 'Show', itinerary_event_path(itinerary, event) %>
    <br>
    <% end %>

    <td><%= link_to 'Delete Itinerary', itinerary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </div>
</div>
