  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= form.label :journal_entry %>
    <%= form.text_area :journal_entry, id: :event_journal_entry %>
  </div>

  <div class="field">
    <%= form.label :time_start %>
    <%= form.datetime_select :time_start, id: :event_time_start %>
  </div>

  <div class="field">
    <%= form.label :time_end %>
    <%= form.datetime_select :time_end, id: :event_time_end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
