<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Itinerary</th>
      <th>Location</th>
      <th>Journal entry</th>
      <th>Time start</th>
      <th>Time end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.itinerary %></td>
        <td><%= event.location %></td>
        <td><%= event.journal_entry %></td>
        <td><%= event.time_start %></td>
        <td><%= event.time_end %></td>
        <td><%= link_to 'Show', itinerary_event_path(@itinerary, event) %></td>
        <td><%= link_to 'Edit', edit_itinerary_event_path(@itinerary, event) %></td>
        <td><%= link_to 'Destroy', itinerary_event_path(@itinerary, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

