<div class="card">
  <div class="card-body">
    <span class="card-title">
      <strong><%= link_to event.name, itinerary_event_path(@itinerary, event) %></strong>
    </span>
    <br>

    <p>
      <strong>Location:</strong>
      <%= event.location %>
    </p>

    <p>
      <strong>Journal entry:</strong>
      <%= event.journal_entry %>
    </p>

    <p>
      <strong>Time start:</strong>
      <%= event.time_start %>
    </p>

    <p>
      <strong>Time end:</strong>
      <%= event.time_end %>
    </p>

    <%= link_to 'Delete', itinerary_event_path(@itinerary, event), method: :delete %>
  </div>
</div>
