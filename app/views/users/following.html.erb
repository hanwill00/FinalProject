<table class="table table-light">
  <thead>
    <tr>
      <th class="table-dark bg-primary">Users You Are Following</th>
      <th class="table-dark bg-primary" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user.pending_friends.empty? %>
      <td>No friend requests.</td>
    <% else %>
      <% current_user.followees.each do |friend| %>
        <tr>
          <td><%= link_to friend.full_name, friend %></td>
          <td><%= link_to 'Unfollow', delete_friend_user_path(friend), method: :delete %></td>
        </tr>
      <% end %>
  <% end %>
</table>

<table class="table table-light">
  <thead>
    <tr>
      <th class="table-dark bg-primary">Followers</th>
      <th class="table-dark bg-primary" colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% if current_user.requested_friends.empty? %>
      <td>No sent friend requests.</td>
    <% else %>
      <% current_user.requested_friends.each do |friend| %>
        <tr>
          <td><%= link_to friend.full_name, friend %></td>
          <td><%= link_to 'Cancel Friend Request', delete_friend_user_path(friend), method: :delete %></td>
          <td></td>
        </tr>
      <% end %>
  <% end %>
</table>
